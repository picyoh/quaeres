---
import { FaGithub, FaLinkedin, FaReddit } from "react-icons/fa";
const { platform, username } = Astro.props;
const logos = [
  {
    name: "github",
    icon: FaGithub,
  },
  {
    name: "linkedin",
    icon: FaLinkedin,
  },
  {
    name: "reddit",
    icon: FaReddit,
  },
];
---

<a href={`https://www.${platform}.com/${username}`}
  >{logos.map((item, index) => {
    return(
      <>
      {item.name === platform ? <item.icon />: null}
      </>
    )
  })}</a
>
