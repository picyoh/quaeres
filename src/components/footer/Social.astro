---
import { FaGithub, FaLinkedin, FaReddit } from "react-icons/fa";
const { platform, username } = Astro.props;
const logos = [
  {
    name: "github",
    icon: FaGithub,
  },
  {
    name: "linkedin",
    icon: FaLinkedin,
  },
  {
    name: "reddit",
    icon: FaReddit,
  },
];
---

<a href={`https://www.${platform}.com/${username}`} class="row s-gap">
{
    logos.map((item) => {
      return (
        <>
          {item.name === platform ? 
          <item.icon /> 
          <p class="no-spacing">{item.name.charAt(0).toUpperCase() + item.name.slice(1)}</p>
          : null}
        </>
      );
    })
  }
</a>
