---
import TypeWriter from "../TypeWriter/TypeWriter.astro";
const words = ["create", "design", "develop", "build"];
---

<style>
  #hero {
    height: 80vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
  }

  #logoSection {
    width: 100vw;
    height: 70vh;
  }

  #heroLogo {
    filter: drop-shadow(3px 12px 1px var(--shadow))
      drop-shadow(3px 12px 2px var(--light-shadow));
    transition: var(--basic-transition);
  }
</style>
<section id="hero">
  <div>
    <h2 class="typewriter">
      <div>Let's</div>
      <TypeWriter words={words} />
      <div>together.</div>
    </h2>
  </div>
  <div id="logoSection" class="row centered">
    <img id="heroLogo" src="/src/images/Simple.svg" alt="Animated logo" />
  </div>
</section>
<script src="./logoAnimation.ts"></script>
